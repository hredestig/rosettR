      file.copy(
          sprintf("EXP001_Daniel/D%d/plate%03d.jpg", i, 1:6),
          sprintf("pkg/inst/examples/rosettrTest/D%d/", i)
          )

  file.copy("pkg/inst/examples/rosettrTest.zip",
            file.path(.libPaths()[1], "rosettR/examples/rosettrTest.zip"),
            overwrite=TRUE)
  makeTestExperiment()
